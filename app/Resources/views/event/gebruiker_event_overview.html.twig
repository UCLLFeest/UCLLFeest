{% extends 'base.html.twig' %}


{% block title %}
    Mijn Events.
{% endblock %}

{% block body %}
    <h1>Overview</h1>

    <h3>Mijn Events</h3>
    <table>
        <tr>
            <td>Naam</td>
            <td>Adres</td>
            <td>Datum</td>
            <td>Uur</td>
        </tr>
        {% for event in events %}
        <tr>
            <td><a href="{{ path('event_detail',{'id':event.getId()}) }}">{{ event.getName()}}</td>
            <td>{{ event.getFullAdress()}}</td>
            <td>{{ event.getDateFormatted() }}</td>
            <td> <a href="{{ path('delete_event',{'id':event.getId()}) }}">Delete</a> </td>
            <td> <a href="{{ path('update_event',{'id':event.getId()}) }}">Update</a> </td>
        </tr>
        {% endfor %}
    </table>
    <p> <a href="/events/Add_Event">Maak een nieuw evenement aan</a> </p>

    <h3>Managed Events</h3>
    <table>
        <tr>
            <td>Naam</td>
            <td>Adres</td>
            <td>Datum</td>
            <td>Uur</td>
        </tr>
        {% for event in managing %}
            <tr>
                <td><a href="{{ path('event_detail',{'id':event.getId()}) }}">{{ event.getName()}}</td>
                <td>{{ event.getFullAdress()}}</td>
                <td>{{ event.getDate() | date('Y-m-d') }}</td>
                <td>{{ event.getDate() | date('H:i') }}</td>
                <td> <a href="{{ path('update_event',{'id':event.getId()}) }}">Update</a> </td>
            </tr>
        {% endfor %}
    </table>



{% endblock %}


