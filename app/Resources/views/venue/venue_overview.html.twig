{% extends 'base.html.twig' %}


{% block title %}
    Venues
{% endblock %}

{% block body %}
    <h1>Overview</h1>


    <table>
        <tr>
            <td>Naam</td>
            <td>Adres</td>
        </tr>
        {% for venue in venues %}
            <tr>
                <td><a href="{{ path('venue_detail',{'id':venue.getId()}) }}">{{ venue.getName()}}</td>
                <td>{{ venue.getFullAdress()}}</td>
            </tr>
        {% endfor %}
    </table>
    <p> <a href="{{ path('add_venue') }}">Maak een nieuwe venue aan</a> </p>
{% endblock %}