{% extends 'base.html.twig' %}

{% block title %}
    Managers
{% endblock %}

{% block body %}
    <div class="container content">
        {% if event.managers is not empty %}
        <div class="title">Managers voor <a href="{{ path('event_detail',{'id':event.getId()}) }}">{{event.name}}</a></div>
        <table class="table">
            {% for manager in event.managers %}
                <tr>
                    <td><a href="{{ path('accountview',{'id':manager.getId()}) }}">{{ manager.username }}</a></td>
                    <td><a class="pull-right" href="{{ path('delete_manager',{'event_id': event.getId(), 'username': manager.username}) }}" data-toggle="tooltip" data-placement="left" title="Delete manager"><i class="fa fa-times"></i></a></td>
                </tr>
            {% endfor %}
        </table>
        {% endif %}
        <p> <a class="feest-button" href="{{ path('add_manager',{'event_id': event.getId()} ) }}">Voeg manager toe</a> </p>
    </div>
{% endblock %}
