{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feest</h1>

    <p>Welkom op de homepagina van Feest</p>
    <p>Hier kunt u evenementen in uw buurt vinden, of zelf een evenement organiseren.</p>

    {% if( app.user ) %}
        <p>Welkom terug {{ app.user.username }}</p>
        <p><a href="/logout">Log uit</a>
    {%  else %}
        <p>Welkom. <a href="/login">Log in</a> of <a href="/register">Registreer</a></p>
    {% endif %}

    {% if events != null %}
    <h2>Events bij u in de buurt</h2>
    <table>
        <tr>
            <td>Naam</td>
            <td>Adres</td>
            <td>Inkom Prijs</td>
            <td>Start</td>
        </tr>
        {% for event in events %}
            <tr>
                <td><a href="{{ path('event_detail',{'id':event.getId()}) }}">{{ event.getName()}}</td>
                <td>{{ event.getFullAdress()}}</td>
                <td>{{ event.getPrice()}}</td>
                <td>{{ event.getDate() | date('Y-m-d') }}</td>
                <td>{{ event.getDate() | date('H:i') }}</td>
            </tr>
        {% endfor %}
    </table>
    {% endif %}
{% endblock %}