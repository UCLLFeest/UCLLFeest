{% extends 'base.html.twig' %}

{%  block title %}
    All Users
{% endblock %}

{% block body %}
    <h1>All Users</h1>

    {% if users is not empty %}
        <table>
            <tr>
                <th>Username</th>
                <th></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td><a href="/account/view/{{ user.id }}">View Profile</a></td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p>No users to display</p>
    {% endif %}
{% endblock %}